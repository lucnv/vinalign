<div class="col-md-6 col-lg-3 px-4 py-5">
  <div class="team-member image-box style-2 shadow-2 bordered light-gray-bg text-center">
    <div class="overlay-container overlay-visible">
      <%= image_tag expert.avatar.medium.url, class: "image-full-width"%>
    </div>
    <div class="body">
      <h5 class="margin-clear display-one-line"><%= expert.full_name %></h5>
      <div class="small display-one-line"><%= expert.title %></div>
      <div class="separator mt-10"></div>
      <p class="small margin-clear"><%= expert.workplace %></p>
      <div class="separator mt-10"></div>
        <ul class="social-links colored margin-clear">
          <li class="facebook">
            <% if expert.facebook_url %>
              <%= link_to expert.facebook_url, target: "_blank" do %>
                <i class="fa fa-facebook"></i>
              <% end %>
            <% else %>
              <%= image_tag "https://s3-ap-southeast-1.amazonaws.com/vinalign/40x40.png"  %>
            <% end %>
          </li>
        </ul>
    </div>
  </div>
</div>

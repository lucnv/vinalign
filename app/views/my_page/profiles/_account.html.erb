<div class="box">
  <div class="box-header">
    <h3 class="box-title"><%= t ".account" %></h3>
  </div>
  <div class="box-body">
    <table class="table table-striped">
      <%= render "shared/data", attribute: User.human_attribute_name(:username), value: user.username %>
      <%= render "shared/data", attribute: User.human_attribute_name(:email), value: user.email %>
      <%= render "shared/data", attribute: User.human_attribute_name(:password), value: "********" %>
    </table>
  </div>
</div>

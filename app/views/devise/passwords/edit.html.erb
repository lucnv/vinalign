<section class="main-container">
  <div class="container">
    <div class="row">
      <div class="devise-form col-md-6 offset-md-3">
        <div class="card">
          <div class="card-body mx-4">
            <div class="text-center">
              <h2 class="mb-5 mt-4"><%= t ".change_my_password" %></h2>
            </div>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
              <%= f.hidden_field :reset_password_token %>
              <div class="form-group has-feedback">
                <%= f.label :password, class: "control-label" do %>
                  <%= User.human_attribute_name :password %>
                  <span class="text-danger small">*</span>
                <% end %>
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                <i class="fa fa-lock form-control-feedback pr-4"></i>
              </div>
              <div class="form-group has-feedback">
                <%= f.label :password, class: "control-label" do %>
                  <%= User.human_attribute_name :password_confirmation %>
                  <span class="text-danger small">*</span>
                <% end %>
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
                <i class="fa fa-lock form-control-feedback pr-4"></i>
              </div>
              <div class="actions mb-3 mt-5">
                <%= f.submit t(".change_my_password"), class: "btn blue-gradient btn-block btn-rounded z-depth-1a" %>
              </div>
            <% end %>
          </div>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

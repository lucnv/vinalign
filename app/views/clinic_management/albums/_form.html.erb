<%= form_for album, url: form_path, html: {class: "form-horizontal"}, remote: true do |f| %>
  <div class="form-group">
    <%= f.label :name, Album.human_attribute_name(:name), 
      class: "control-label col-md-3" %>
    <div class="col-md-7">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
<% end %>

BootstrapDialog.show({
  title: "<%= t '.new_album' %>",
  id: "new-album",
  message: "<%= j render 'form', album: @album, \
    form_path: clinic_management_treatment_phase_albums_path(@treatment_phase) %>".replace(/\n/g, ''),
  closeByBackdrop: false,
  closeByKeyboard: false,
  buttons: [{
    label: "<%= t '.cancel' %>",
    cssClass: "btn-flat",
    action: function(dialog){
      dialog.close();
    }
  },
  {
    label: "<%= t '.create' %>",
    cssClass: "btn-primary btn-flat",
    action: function(dialogRef){
      dialogRef.getModalBody().find("form").submit();
    }
  }]
});

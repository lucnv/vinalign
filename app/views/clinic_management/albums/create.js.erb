<% if @album.errors.blank? %>
  $(".group-item-album.active-album").removeClass("active-album");
  $("#album-list").prepend("<%= j render 'clinic_management/treatment_phases/album', album: @album %>");
  $.ajax({url: "<%= album_images_path(@album) %>"});
  $("#persit_album_modal").modal("hide");
<% else %>
  $("#album-form").html("<%= j render 'form', album: @album, \
    form_path: clinic_management_treatment_phase_albums_path(@treatment_phase) %>");
<% end %>
$("#flash-messages").html("<%= j render 'layouts/shared/flash' %>");

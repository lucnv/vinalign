<div class="col-md-6">
  <div class="form-group">
    <%= f.label :start_date, class: "control-label col-md-4" do %>
      <%= PatientRecord.human_attribute_name(:start_date) %>
      <span class="text-danger">*</span>
    <% end %>
    <div class="col-md-5">
      <%= f.date_field :start_date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :first_name, class: "control-label col-md-4" do %>
      <%= PatientRecord.human_attribute_name(:first_name) %>
      <span class="text-danger">*</span>
    <% end %>
    <div class="col-md-5">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, class: "control-label col-md-4" do %>
      <%= PatientRecord.human_attribute_name(:last_name) %>
      <span class="text-danger">*</span>
    <% end %>
    <div class="col-md-5">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :dob, class: "control-label col-md-4" do %>
      <%= PatientRecord.human_attribute_name(:dob) %>
      <span class="text-danger">*</span>
    <% end %>
    <div class="col-md-5">
      <%= f.date_field :dob, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :gender, class: "control-label col-md-4" do %>
      <%= PatientRecord.human_attribute_name(:gender) %>
      <span class="text-danger">*</span>
    <% end %>
    <div class="col-md-5">
      <%= f.select :gender, gender_options, {include_blank: t(".select_gender")}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :province, PatientRecord.human_attribute_name(:province),
      class: "control-label col-md-4" %>
    <div class="col-md-5">
      <%= select_tag :province, options_for_select(@support.province_options, @patient_record.province_id),
        {include_blank: t(".select_province"), class: "form-control province_selection"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :district_id, PatientRecord.human_attribute_name(:district),
      class: "control-label col-md-4" %>
    <div class="col-md-5">
      <%= f.select :district_id, @support.district_options, {include_blank: t(".select_district")},
        class: "form-control district_selection" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, PatientRecord.human_attribute_name(:address),
      class: "control-label col-md-4" %>
    <div class="col-md-5">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone_number, PatientRecord.human_attribute_name(:phone_number),
      class: "control-label col-md-4" %>
    <div class="col-md-5">
      <%= f.text_field :phone_number, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, PatientRecord.human_attribute_name(:email),
      class: "control-label col-md-4" %>
    <div class="col-md-5">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :doctor, PatientRecord.human_attribute_name(:doctor),
      class: "control-label col-md-4" %>
    <div class="col-md-5">
      <%= f.text_field :doctor, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-4 col-md-5">
      <%= f.submit class: "btn btn-primary btn-flat" %>
    </div>
  </div>
</div>
<div class="col-md-6">
  <div class="form-group">
    <%= f.label :profile_photo, PatientRecord.human_attribute_name(:profile_photo),
      class: "control-label col-md-2" %>
    <div class="col-md-7">
      <%= f.file_field :profile_photo, id: "image_upload", class: "form-control" %>
      <%= image_tag patient_record.profile_photo_url, id: "image_preview",
        size: "300x300", style: "border: 1px;" %>
    </div>
  </div>
</div>

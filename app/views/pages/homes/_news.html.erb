<section class="home-section clearfix">
  <div class="bd-example">
    <div id="news_carousel" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <% @articles.each_with_index do |article, index| %>
          <li data-target="#news_carousel" data-slide-to='<%= index %>' class="<%=' active' if index == 0%>"></li>
        <% end %>
      </ol>
      <div class="carousel-inner">
        <% @articles.each_with_index do |article, index| %>
          <div class="carousel-item <%=' active' if index == 0%>">
            <%= image_tag article.represent_image.big_thumb.url, class: "d-block w-100" %>
            <div class="carousel-caption d-none d-md-block">
              <h2><%= article.title %></h2>
              <p class="text-muted"><%= article.summary %></p>
            </div>
          </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#news_carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#news_carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</section>

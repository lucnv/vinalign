<article class="blogpost">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag article.represent_image.thumb.url %>
    </div>
    <div class="col-md-8">
      <header>
        <h2><a href="blog-post.html"><%= article.title %></a></h2>
        <div class="post-info">
          <span class="post-date">
            <i class="fa fa-calendar"></i>
            <span class="day"><%= time_with_format article.created_at %></span>
          </span>
        </div>
      </header>
      <div class="blogpost-content">
        <%= article.summary %>
      </div>
    </div>
  </div>
</article>
<hr/>

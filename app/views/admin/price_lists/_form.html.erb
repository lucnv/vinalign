<%= form_for price_list, url: form_path, html: {class: "form-horizontal"}, remote: true do |f| %>
  <div class="form-group">
    <%= f.label :item, PriceList.human_attribute_name(:item), 
      class: "control-label col-md-3" %>
    <div class="col-md-7">
      <%= f.text_field :item, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price, PriceList.human_attribute_name(:price), 
      class: "control-label col-md-3" %>
    <div class="col-md-7">
      <%= f.text_field :price, class: "form-control" %>
    </div>
  </div>
<% end %>

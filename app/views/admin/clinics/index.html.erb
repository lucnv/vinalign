<% content_for :clinics_activation, "active" %>
<section class="content-header clearfix">
  <h1 class="pull-left"><%= t ".clinics_management" %></h1>
  <%= link_to "#", class: "btn btn-primary btn-flat pull-right" do %>
    <i class="fa fa-plus"></i>
    <%= t ".add_new_clinic" %>
  <% end %>
</section>
<section class="content">
  <div class="box">
    <div class="box-header with-border">
      <%= render "filter", q: @q, support: @support %>
    </div>
    <div class="box-body">
      <%= render "shared/full_pagination", records: @clinics %>
      <% if @clinics.present? %>
        <%= render "clinic_list", clinics: @clinics %>
        <%= render "shared/full_pagination", records: @clinics %>
      <% end %>
    </div>
  </div>
</section>

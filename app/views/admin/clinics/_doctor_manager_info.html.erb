<div class="box">
  <div class="box-header">
    <h3 class="box-title"><%= t ".doctor_manager" %></h3>
  </div>
  <div class="box-body">
    <h4><%= t ".general_info" %></h4>
    <table class="table table-striped">
      <%= render "shared/data", attribute: UserProfile.human_attribute_name(:full_name), value: doctor.full_name %>
      <%= render "shared/data", attribute: UserProfile.human_attribute_name(:dob),
        value: time_with_format(doctor.dob) %>
      <%= render "shared/data", attribute: UserProfile.human_attribute_name(:gender),
        value: t("gender.#{doctor.gender}") %>
      <%= render "shared/data", attribute: UserProfile.human_attribute_name(:phone_number), value: doctor.phone_number %>
    </table>
    <hr/>
    <h4><%= t ".account" %></h4>
    <table class="table table-striped">
      <%= render "shared/data", attribute: User.human_attribute_name(:username), value: doctor.username %>
      <%= render "shared/data", attribute: User.human_attribute_name(:email), value: doctor.email %>
      <%= render "shared/data", attribute: User.human_attribute_name(:password), value: "********" %>
    </table>
  </div>
</div>

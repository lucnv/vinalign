<div class="col-md-6">
  <div class="form-group">
    <div class="form-group">
      <%= f.label :avatar, Expert.human_attribute_name(:avatar),
        class: "control-label col-md-4" %>
      <div class="col-md-5">
        <%= f.file_field :avatar, class: "form-control" %>
      </div>
    </div>
  <div class="form-group">
    <%= f.label :first_name, class: "control-label col-md-4" do %>
      <%= Expert.human_attribute_name :first_name %>
      <span class="text-danger">*</span>
    <% end %>
    <div class="col-md-5">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, class: "control-label col-md-4" do %>
      <%= Expert.human_attribute_name :last_name %>
      <span class="text-danger">*</span>
    <% end %>
    <div class="col-md-5">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :title, class: "control-label col-md-4" do %>
      <%= Expert.human_attribute_name :title %>
      <span class="text-danger">*</span>
    <% end %>
    <div class="col-md-5">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :workplace, class: "control-label col-md-4" do %>
      <%= Expert.human_attribute_name :workplace %>
      <span class="text-danger">*</span>
    <% end %>
    <div class="col-md-5">
      <%= f.text_field :workplace, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :facebook_url, Expert.human_attribute_name(:facebook_url),
      class: "control-label col-md-4" %>
    <div class="col-md-5">
      <%= f.text_field :facebook_url, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :province, class: "control-label col-md-4" do %>
      <%= Expert.human_attribute_name :province %>
      <span class="text-danger">*</span>
    <% end %>
    <div class="col-md-5">
      <%= select_tag :province, options_for_select(@support.province_options, @expert.province_id),
        {include_blank: t(".select_province"), class: "form-control province_selection"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :district_id, class: "control-label col-md-4" do %>
      <%= Expert.human_attribute_name :district %>
      <span class="text-danger">*</span>
    <% end %>
    <div class="col-md-5">
      <%= f.select :district_id, @support.district_options, {include_blank: t(".select_district")},
        class: "form-control district_selection" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, class: "control-label col-md-4" do %>
      <%= Expert.human_attribute_name :address %>
      <span class="text-danger">*</span>
    <% end %>
    <div class="col-md-5">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :priority, Expert.human_attribute_name(:priority),
      class: "control-label col-md-4" %>
    <div class="col-md-5">
      <%= f.number_field :priority, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-4 col-md-5">
      <%= f.submit class: "btn btn-primary btn-flat" %>
    </div>
  </div>
</div>

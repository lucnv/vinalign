<%= form_for expert_search, url: admin_experts_path,
  html: {class: "form-horizontal", method: :get} do |f| %>
  <div class="row">
    <div class="col-md-2">
      <%= f.label :full_name, PatientRecord.human_attribute_name(:full_name) %>
      <%= f.text_field :full_name, class: "form-control" %>
    </div>
    <div class="col-md-2">
      <%= f.label :province_id_eq, Clinic.human_attribute_name(:province) %>
      <%= f.select :province_id_eq, support.province_options,
        {include_blank: t(".all_provinces")}, class: "form-control" %>
    </div>
    <div class="col-md-2">
      </br>
      <%= f.button class: "btn btn-flat btn-primary btn-search" do %>
        <i class="fa fa-search fa-lg" aria-hidden="true"></i>
        <%= t(".search") %>
      <% end %>
    </div>
  </div>
<% end %>

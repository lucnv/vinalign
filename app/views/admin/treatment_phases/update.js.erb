<% if @treatment_phase.errors.blank? %>
  $("#treatment_phase_modal").modal("hide");
  $("#treatment-phase-<%= @treatment_phase.id %>").replaceWith("<%= j render 'shared/treatment_phases/treatment_phase', \
    treatment_phase: @treatment_phase, scope: :admin %>");
<% else %>
  $("#treatment-phase-form").html("<%= j render 'shared/treatment_phases/form', \
    treatment_phase: @treatment_phase,\
    form_path: admin_treatment_phase_path(@treatment_phase) %>");
<% end %>
$("#flash-messages").html("<%= j render 'layouts/shared/flash' %>");

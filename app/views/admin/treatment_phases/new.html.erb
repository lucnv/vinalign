<%= render "shared/patient_records/provide_patient_record_side_bar", patient_record: @patient_record, 
  scope: :admin, current_site: :treatment_phases %>
<section class="content-header">
  <h1><%= t ".new_treatment_phase" %></h1>
</section>
<section class="content">
  <div class="box">
    <div class="box-body">
      <%= form_for [:admin, @patient_record, @treatment_phase], html: {class: "form-horizontal"} do |f| %>
        <%= render "shared/treatment_phases/form", f: f, patient_record: @patient_record %>
      <% end %>
    </div>
  </div>
</section>

<div class="row">
  <div class="col col-md-3">
    <div class="list-group" id="album-list">
      <%= render partial: "album", collection: support.albums, as: :album,
        locals: {current_album: support.album} %>
    </div>
    <%= link_to new_admin_treatment_phase_album_path(treatment_phase), remote: true,
      class: "btn btn-primary btn-flat" do %>
      <i class="fa fa-plus"></i>
      <%= t ".new_album" %>
    <% end %>
  </div>
  <div class="col col-md-9">
    <div id="form-upload">
      <%= render "images/form_upload", album: support.album if support.album.present? %>
    </div>
    <div id="images-presentation">
      <% if support.album.present? %>
        <%= render "images/images_presentation", images: support.album_images, album: support.album %>
      <% end %>
    </div>
  </div>
</div>

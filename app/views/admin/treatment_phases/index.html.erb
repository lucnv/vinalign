<%= render "shared/patient_records/provide_patient_record_side_bar", patient_record: @patient_record,
  scope: :admin, current_site: :treatment_phases %>
<%= render "admin/clinics/provide_clinic_side_bar", clinic: @patient_record.clinic, current_site: :patient_records %>
<% provide :header_title, t(".treatment_phases_title_html", clinic_name: @patient_record.clinic_name,
  patient_name: @patient_record.full_name) %>
<% breadcrumb :admin_patient_record_treatment_phases, @patient_record %>

<%= link_to new_admin_patient_record_treatment_phase_path(@patient_record),
  class: "btn btn-primary btn-flat" do  %>
  <i class="fa fa-plus"></i>
  <%= t ".add_treatment_phase" %>
<% end %>
<%= render partial: "shared/treatment_phases/treatment_phase",
  collection: @treatment_phases, as: :treatment_phase, locals: {scope: :admin} %>

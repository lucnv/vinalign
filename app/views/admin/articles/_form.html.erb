<div class="row container">
  <div class="col-md-8">
    <div class="form-group">
      <%= f.label :title do %>
        <%= Article.human_attribute_name(:title) %>
        <span class="text-danger">*</span>
      <% end %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :summary do %>
        <%= Article.human_attribute_name(:summary) %>
        <span class="text-danger">*</span>
      <% end %>
      <%= f.text_area :summary, class: "form-control", rows: 3 %>
    </div>
    <div class="form-group wrap-ck-editor">
      <%= f.label :content do %>
        <%= Article.human_attribute_name(:content) %>
        <span class="text-danger">*</span>
      <% end %>
      <%= f.cktext_area :content %>
    </div>
    <div class="form-group">
      <%= f.submit class: "btn btn-primary btn-flat" %>
    </div>
  </div>
  <div class="col-md-4">
    <div class="form-group">
      <%= f.label :category do %>
        <%= Article.human_attribute_name(:category) %>
        <span class="text-danger">*</span>
      <% end %>
      <%= f.select :category, Article::categories.keys.map{|c| [t(".#{c}"), c]},
        {include_blank: t(".select_category")}, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :represent_image, Article.human_attribute_name(:represent_image) %>
      <%= f.file_field :represent_image, id: "image_upload" %>
      </br>
      <%= image_tag @article.represent_image.thumb.url, id: "image_preview", width: "100%", style: "border: 1px;" %>
    </div>
  </div>
</div>

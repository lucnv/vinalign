<% if @album.errors.blank? %>
  $(".group-item-album.active-album").removeClass("active-album");
  $("#album-list").prepend("<%= j render 'admin/treatment_phases/album', album: @album %>");
  $(".group-item-album#album-<%= @album.id %>").addClass("active-album");
  $("#images-presentation").html("<%= j render 'images/images_presentation', images: [], album: @album %>");
  $("#persit_album_modal").modal("hide");
<% else %>
  $("#album-form").html("<%= j render 'form', album: @album, \
    form_path: admin_treatment_phase_albums_path(@treatment_phase) %>");
<% end %>
$("#flash-messages").html("<%= j render 'layouts/shared/flash' %>");

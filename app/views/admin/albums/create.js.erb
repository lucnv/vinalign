<% if @album.errors.blank? %>
  $("#album-list").html("<%= j render partial: 'shared/treatment_phases/album', collection: @albums, as: :album, \
    locals: {current_album: @album, scope: :admin} %>")
  $("#images-presentation").html("<%= j render 'images/images_presentation', album: @album, images: @album.images %>")
  $("#persit_album_modal").modal("hide");
<% else %>
  $("#album-form").html("<%= j render 'form', album: @album, \
    form_path: admin_treatment_phase_albums_path(@treatment_phase) %>");
<% end %>
$("#flash-messages").html("<%= j render 'layouts/shared/flash' %>");

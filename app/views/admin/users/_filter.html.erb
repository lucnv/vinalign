<%= search_form_for q, url: admin_users_path, html: {class: "form-horizontal"} do |f| %>
  <div class="row">
    <div class="col-md-2">
      <%= f.label :email_cont, User.human_attribute_name(:email) %>
      <%= f.text_field :email_cont, class: "form-control" %>
    </div>
    <div class="col-md-2">
      <%= f.label :profile_full_name_cont, UserProfile.human_attribute_name(:full_name) %>
      <%= f.text_field :profile_full_name_cont, class: "form-control" %>
    </div>
    <div class="col-md-2">
      </br>
      <%= f.button class: "btn btn-flat btn-primary btn-search" do %>
        <i class="fa fa-search fa-lg" aria-hidden="true"></i>
        <%= t(".search") %>
      <% end %>
    </div>
  </div>
<% end %>

<%= render "shared/patient_records/provide_patient_record_side_bar", patient_record: @patient_record,
  scope: :admin, current_site: :administrative_informations %>
<%= render "admin/clinics/provide_clinic_side_bar", clinic: @patient_record.clinic, current_site: :patient_records %>
<% provide :header_title, t(".patient_record_title_html", clinic_name: @patient_record.clinic.name,
  patient_name: @patient_record.full_name) %>
<% breadcrumb :admin_patient_record, @patient_record %>
<div class="row">
  <div class="col-md-6">
    <%= render "shared/patient_records/details", patient_record: @patient_record %>
  </div>
  <%= image_tag @patient_record.profile_photo.medium.url %>
</div>
<%= link_to edit_admin_patient_record_path(@patient_record),
  class: "btn btn-warning btn-flat" do %>
  <i class="fa fa-pencil-square-o"></i>
  <%= t ".edit" %>
<% end %>

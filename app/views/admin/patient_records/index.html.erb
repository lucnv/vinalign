<% content_for :patient_records_activation, "active" %>
<% provide :header_title, t(".patient_records_title_html", clinic_name: @clinic.name) %>
<% breadcrumb :admin_clinic_patient_records, @clinic %>
<div class="box">
  <div class="box-header with-border">
    <%= render "filter", q: @q, clinic: @clinic %>
  </div>
  <div class="box-body">
    <%= render "shared/full_pagination", records: @patient_records %>
    <% if @patient_records.present? %>
      <%= render "patient_record_list", patient_records: @patient_records %>
      <%= render "shared/full_pagination", records: @patient_records %>
    <% end %>
  </div>
</div>

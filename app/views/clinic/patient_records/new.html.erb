<% content_for :patient_records_activation, "active" %>
<section class="content-header">
  <h1><%= t ".new_patient_record" %></h1>
</section>
<section class="content">
  <div class="box">
    <div class="box-body">
      <%= form_for [:clinic, @patient_record], html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :start_date, PatientRecord.human_attribute_name(:start_date), 
      class: "control-label col-md-2" %>
    <div class="col-md-2">
      <%= f.date_field :start_date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :first_name, PatientRecord.human_attribute_name(:first_name), 
      class: "control-label col-md-2" %>
    <div class="col-md-3">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, PatientRecord.human_attribute_name(:last_name), 
      class: "control-label col-md-2" %>
    <div class="col-md-3">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :dob, PatientRecord.human_attribute_name(:dob), 
      class: "control-label col-md-2" %>
    <div class="col-md-2">
      <%= f.date_field :dob, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :gender, PatientRecord.human_attribute_name(:gender), 
      class: "control-label col-md-2" %>
    <div class="col-md-2">
      <%= f.select :gender, gender_options, {include_blank: t(".select_gender")}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :province, PatientRecord.human_attribute_name(:province), 
      class: "control-label col-md-2" %>
    <div class="col-md-3">
      <%= select_tag :province, options_for_select(@support.province_options, @patient_record.province_id), 
        {include_blank: t(".select_province"), class: "form-control province_selection"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :district_id, PatientRecord.human_attribute_name(:district), 
      class: "control-label col-md-2" %>
    <div class="col-md-3">
      <%= f.select :district_id, @support.district_options, {include_blank: t(".select_district")}, 
        class: "form-control district_selection" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, PatientRecord.human_attribute_name(:address), 
      class: "control-label col-md-2" %>
    <div class="col-md-3">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone_number, PatientRecord.human_attribute_name(:phone_number), 
      class: "control-label col-md-2" %>
    <div class="col-md-3">
      <%= f.text_field :phone_number, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, PatientRecord.human_attribute_name(:email), 
      class: "control-label col-md-2" %>
    <div class="col-md-3">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :doctor, PatientRecord.human_attribute_name(:doctor), 
      class: "control-label col-md-2" %>
    <div class="col-md-3">
      <%= f.text_field :doctor, class: "form-control" %>
    </div>
  </div>
  <div class="form-group"> 
    <div class="col-md-offset-2 col-md-3">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
      <% end %>
    </div>
  </div>
</section>

<% content_for :patient_records_activation, "active" %>
<section class="content-header">
  <h1><%= t ".patient_record_list" %></h1>
</section>
<section class="content">
  <div class="box">
    <div class="box-body">
      <%= link_to new_clinic_patient_record_path, class: "btn btn-primary btn-flat" do %>
        <i class="fa fa-plus"></i>
        <%= t ".add_patient_record" %>
      <% end %>
      <hr/>
      <table class="table table-hover">
        <thead>
          <th><%= PatientRecord.human_attribute_name :id %></th>
          <th><%= PatientRecord.human_attribute_name :full_name %></th>
          <th><%= PatientRecord.human_attribute_name :gender %></th>
          <th><%= PatientRecord.human_attribute_name :age %></th>
          <th><%= PatientRecord.human_attribute_name :phone_number %></th>
          <th><%= PatientRecord.human_attribute_name :start_date %></th>
        </thead>
        <tbody>
          <%= render partial: :patient_record, collection: @patient_records, as: :patient_record %>
        </tbody>
      </table>
      <%= paginate @patient_records, theme: "twitter-bootstrap-3" %>
    </div>
  </div>
</section>

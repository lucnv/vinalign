<% content_for :patient_records_activation, "active" %>
<section class="content-header clearfix">
  <h1 class="pull-left"><%= t ".patient_record_management" %></h1>
  <%= link_to new_clinic_patient_record_path, class: "btn btn-primary btn-flat pull-right" do %>
    <i class="fa fa-plus"></i>
    <%= t ".add_patient_record" %>
  <% end %>
</section>
<section class="content">
  <div class="box">
    <div class="box-header with-border">
      <%= render "filter", q: @q %>
    </div>
    <div class="box-body">
      <%= t ".total_records_found", count: @patient_records.total_count %>
      <% if @patient_records.present? %>
        <%= render "patient_record_list", patient_records: @patient_records %>
      <% end %>
    </div>
    <div class="box-footer">
      <%= paginate @patient_records, theme: "twitter-bootstrap-3" %>
    </div>
  </div>
</section>

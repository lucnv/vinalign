<%= render "shared/patient_records/provide_patient_record_side_bar", patient_record: @patient_record, 
  scope: :clinic, current_site: :administrative_informations %>
<section class="content-header">
  <h1><%= t ".patient_record" %></h1>
</section>
<section class="content">
  <div class="box">
    <div class="box-body">
      <div class="row">
        <div class="col-md-5">
          <%= render "shared/patient_records/details", patient_record: @patient_record %>
        </div>
        <div class="col-md-7">
          <%= image_tag @patient_record.profile_photo.small.url %>
          <%= link_to edit_clinic_patient_record_path(@patient_record), 
            class: "pull-right btn btn-warning" do %>
            <i class="fa fa-pencil-square-o"></i>
            <%= t ".edit" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

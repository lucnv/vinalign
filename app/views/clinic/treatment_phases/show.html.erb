<%= render "shared/patient_records/provide_patient_record_side_bar", 
  patient_record: @treatment_phase.patient_record, scope: :clinic, current_site: :treatment_phases %>
<% content_for "treatment_phase_#{active_tab}_activation".to_sym, "active" %>

<section class="content-header">
  <h1><%= t ".treatment_phase_details" %></h1>
</section>
<section class="content">
  <div class="box">
    <div class="box-body">
      <p>
        <strong><%= TreatmentPhase.human_attribute_name :start_date %>:</strong>
        <%= @treatment_phase.start_date %>
      </p>
      <p>
        <strong><%= TreatmentPhase.human_attribute_name :description %>:</strong><br/>
        <%= custom_simple_format @treatment_phase.description %>
      </p>
    </div>
  </div>
  <div class="nav-tabs-custom">
    <ul class="nav nav-tabs">
      <li class="<%= content_for :treatment_phase_images_activation %>">
        <%= link_to t(".images"), clinic_treatment_phase_path(@treatment_phase) %>
      </li>
      <li class="<%= content_for :treatment_phase_treatment_plans_activation %>">
        <a href="#timeline" data-toggle="tab"><%= t ".treatment_plans" %></a>
      </li>
      <li class="<%= content_for :treatment_phase_communication_activation %>">
        <a href="#settings" data-toggle="tab"><%= t ".communication" %></a>
      </li>
    </ul>
    <div class="tab-content">
      <%= render "#{active_tab}_tab", treatment_phase: @treatment_phase, support: @support %>
    </div>
  </div>
</section>

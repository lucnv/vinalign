<%= form_for treatment_phase, url: form_path, html: {class: "form-horizontal"}, remote: true do |f| %>
  <div class="modal-body">
    <div class="form-group">
      <%= f.label :name, class: "control-label col-md-2" do %>
        <%= TreatmentPhase.human_attribute_name(:name) %>
        <span class="text-danger">*</span>
      <% end %>
      <div class="col-md-9">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :start_date, class: "control-label col-md-2" do %>
        <%= TreatmentPhase.human_attribute_name(:start_date) %>
        <span class="text-danger">*</span>
      <% end %>
      <div class="col-md-9">
        <%= f.date_field :start_date, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, TreatmentPhase.human_attribute_name(:description),
        class: "control-label col-md-2" %>
      <div class="col-md-9">
        <%= f.text_area :description, rows: 3, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-gray btn-flat" data-dismiss="modal">
      <%= t ".cancel" %>
    </button>
    <%= f.submit class: "btn btn-primary btn-flat" %>
  </div>
<% end %>

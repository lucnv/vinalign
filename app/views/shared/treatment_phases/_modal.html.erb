<div class="modal fade" id="treatment_phase_modal" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <%= t(treatment_phase.persisted? ? ".edit_treatment_phase" : ".new_treatment_phase") %>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="treatment-phase-form">
        <%= render "shared/treatment_phases/form", treatment_phase: treatment_phase,
          form_path: form_path %>
      </div>
    </div>
  </div>
</div>

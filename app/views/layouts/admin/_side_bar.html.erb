<aside class="main-sidebar">
  <section class="sidebar">
    <div class="user-panel">
      <div class="pull-left image">
        <%= image_tag current_user.avatar.small.url, class: "img-circle" %>
      </div>
      <div class="pull-left info">
        <p><%= current_user.full_name %></p>
        <div class="dropdown-toggle pointer" data-toggle="dropdown" aria-expanded="false">
          <small><%= current_user.email %></small>
          <span class="caret"></span>
        </div>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to t(".edit_info"), "#" %></li>
          <li class="divider"></li>
          <li><%= link_to t(".log_out"), destroy_user_session_path, method: :delete, class: "text-danger" %></li>
        </ul>
      </div>
    </div>
    <!-- sidebar menu: : style can be found in sidebar.less -->
    <ul class="sidebar-menu" data-widget="tree">
      <li class="header"><%= t ".main_navigation" %></li>
      <li class="<%= content_for :clinics_activation %>
        <%= 'active menu-open' if content_for? :clinic_side_bar %>">
        <%= link_to admin_clinics_path do %>
          <i class="fa fa-hospital-o"></i>
          <span><%= t ".clinics" %></span>
          <span class="pull-right-container">
            <i class="fa fa-angle-left pull-right"></i>
          </span>
        <% end %>
        <%= yield :clinic_side_bar %>
      </li>
      <li class="<%= content_for :experts_activation %>">
        <%= link_to admin_experts_path do %>
          <i class="fa fa-briefcase"></i>
          <span><%= t ".experts" %></span>
        <% end %>
      </li>
      <li class="<%= content_for :articles_activation %>">
        <%= link_to admin_articles_path do %>
          <i class="fa fa-newspaper-o"></i>
          <span><%= t ".articles" %></span>
        <% end %>
      </li>
      <li class="header"></li>
      <li>
        <%= link_to root_path do %>
          <i class="fa fa-home"></i>
          <span><%= t ".home_page" %></span>
        <% end %>
      </li>
    </ul>
  </section>
</aside>

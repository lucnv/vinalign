<header class="main-header">
  <%= link_to admin_root_path, class: "logo" do %>
    <span class="logo-mini"><%= t ".logo_short_title_html" %></span>
    <span class="logo-lg">
      <b><%= t ".clinic" %></b>&nbsp;<%= t ".management" %>
    </span>
  <% end %>
  <nav class="navbar navbar-static-top">
    <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
      <span class="sr-only"><%= t ".toggle_navigation" %></span>
    </a>
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <li class="dropdown notifications-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-bell-o"></i>
          </a>
        </li>
        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <span class="hidden-xs"><%= current_user.username %></span>
          </a>
          <ul class="dropdown-menu">
            <li class="user-footer">
              <div class="pull-right">
                <%= link_to "Logout", destroy_user_session_path, method: :delete, 
                  class: "btn btn-default btn-flat" %>
              </div>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>

<a id="notification-icon" href="#" class="dropdown-toggle" data-toggle="dropdown">
  <i class="fa fa-bell-o"></i>
  <% if unread_noti_count > 0 %>
    <span class="label label-warning"><%= unread_noti_count %></span>
  <% end %>
</a>
<ul class="dropdown-menu">
  <li class="header">You have <%= unread_noti_count %> unread notifications</li>
    <li>
      <ul class="menu" id="notification-list">
      </ul>
    </li>
  <% if noti_count > 10 %>
    <li class="footer"><a href="#">View all</a></li>
  <% end %>
</ul>
